{
  "extends": "eslint:recommended",
  "rules": {
    "brace-style": "error",
    "comma-spacing": ["error", {"before": false, "after": true}],
    "keyword-spacing": "error",
    "no-console": ["warn", {"allow": ["info"]}],
    "no-multi-spaces": "off",
    "quotes": ["error", "single", "avoid-escape"],
    "space-before-blocks": "error",
    "space-before-function-paren": ["error", "never"]
  },
  "env": {
    "browser": true,
    "jasmine": true,
    "mocha": true,
    "protractor": true
  },
  "plugins": [
    "angular",
    "html"
  ],
  "globals": {
    "__dirname": false,
    "process": false,
    "Polymer": false,
    "WebFont": false,
    "_": false,
    "StatusBar": false,
    "angular": false,
    "module": false,
    "require": false
  }
}
